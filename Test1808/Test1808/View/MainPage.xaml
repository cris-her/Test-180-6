<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:controls="clr-namespace:Test1808.CustomControl"
             x:Class="Test1808.View.MainPage"
             Title="{Binding Title}">
    <!-- https://webview-t.web.app -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:WebViewExtended x:Name="wve"
                                  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                  Source="https://www.bing.com/"
                                  SearchPressed="wve_SearchPressed"/>

        <Button x:Name="btnText"
                Grid.Row="1" Grid.Column="0"
                Text="Text"
                Clicked="btnText_Clicked"/>
        <Button x:Name="btnSearch"
                Grid.Row="1" Grid.Column="1"
                Text="Search"
                Clicked="btnSearch_Clicked"/>
        <Button x:Name="btnObserve"
                Grid.Row="1" Grid.Column="2"
                Text="Observe"
                Clicked="btnObserve_Clicked"/>


    </Grid>
</ContentPage>